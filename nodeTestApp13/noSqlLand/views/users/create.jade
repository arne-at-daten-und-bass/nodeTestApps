
extends ../layout

block content
  form(method="post", action= modelEntity ? "/users/edit/"+modelEntity.id : "/users/create", enctype="application/x-www-form-urlencoded")
    h3= modelEntity ? "Edit User" : "Create User"
    if exists
      .error
        | That user exists. Are you trying to 
        a(href="/login") Login
        | ?
    if invalid
      .error Please enter a valid email address and password.    
    ul
      li
        label(for="email") Email
        input#email(name="email", value= modelEntity ? modelEntity.id : "", disabled= modelEntity ? true : false)
      li
        label(for="firstName") First Name
        input#firstName(name="firstName", value= modelEntity ? modelEntity.name.first : "")
      li
        label(for="lastName") Last Name
        input#lastName(name="lastName", value= modelEntity ? modelEntity.name.last : "")
      li
        label(for="pass") Password
        input#pass(name="pass", type="password")
    input(type="submit", value= modelEntity ? "Edit User" : "Create User")