extends ../layout

block content
  .android-content.mdl-layout__content
    .android-be-together-section.mdl-typography--text-center
      .logo-font.android-sub-slogan #{localesStrings['Create a new Relationship']}:
      .mdl-typography--font-light
        br
        form(name='createRelationship', action='/#{locale}/graph/relationship/create',  method='post')
          select#source(name='source')        
          select#type(name='type', style='text-transform: lowercase;')
          select#target(name='target')
          label#asLabel(for='property') &nbsp; #{localesStrings['as']} &nbsp;
          input#property(type='text', name='property', placeholder="#{localesStrings['Role']}")
          button(type='submit') #{localesCommands['Create']}
        script.
          app.buildOptions(!{JSON.stringify(persons)}, !{JSON.stringify(relationships)}, !{JSON.stringify(movies)});


