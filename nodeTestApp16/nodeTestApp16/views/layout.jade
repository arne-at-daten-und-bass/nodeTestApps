doctype html

html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='description', content='nodeTestApp16')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title nodeTestApp16
    // Page styles
    link(href='https://fonts.googleapis.com/css?family=Roboto:regular,bold,italic,thin,light,bolditalic,black,medium&lang=en', rel='stylesheet')
    link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
    link(rel='stylesheet', href='/material.min.css')
    link(rel='stylesheet', href='/styles.css')
    script(src='/app.js')
  body
    .mdl-layout.mdl-js-layout.mdl-layout--fixed-header
      .android-header.mdl-layout__header.mdl-layout__header--waterfall
        .mdl-layout__header-row
          span.android-title.mdl-layout-title
          //- Add spacer, to align navigation to the right in desktop
          .android-header-spacer.mdl-layout-spacer
          //- Top Navigation
          .android-navigation-container
            nav.android-navigation.mdl-navigation
              a.mdl-navigation__link.mdl-typography--text-uppercase(href='') Home
              a.mdl-navigation__link.mdl-typography--text-uppercase(href='') About
              a.mdl-navigation__link.mdl-typography--text-uppercase(href='') Imprint
          span.android-mobile-title.mdl-layout-title
          button#more-button.android-more-button.mdl-button.mdl-js-button.mdl-button--icon.mdl-js-ripple-effect
            i.material-icons more_vert
          ul.mdl-menu.mdl-js-menu.mdl-menu--bottom-right.mdl-js-ripple-effect(for='more-button')
            li.mdl-menu__item Github Code
            li.mdl-menu__item(disabled='') Login
      // Fly-out Side Navigation
      .android-drawer.mdl-layout__drawer
        span.mdl-layout-title
        nav.mdl-navigation
          a.mdl-navigation__link(href='') The Movie Graph
          .android-drawer-separator
          span.mdl-navigation__link(href='') Movies
          a.mdl-navigation__link(href='') Create
          a.mdl-navigation__link(href='') Read (all)
          a.mdl-navigation__link(href='') Read (one)
          a.mdl-navigation__link(href='') Update (one)
          a.mdl-navigation__link(href='') Delete (one)
          .android-drawer-separator
          span.mdl-navigation__link(href='') Persons
          a.mdl-navigation__link(href='') Create
          a.mdl-navigation__link(href='') Read (all)
          a.mdl-navigation__link(href='') Read (one)
          a.mdl-navigation__link(href='') Update (one)
          a.mdl-navigation__link(href='') Delete (one)
      block content

    script(src='/material.min.js')

