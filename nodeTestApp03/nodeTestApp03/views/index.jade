extends layout

block content
  h1= title
  p Welcome to our test

  //WRAPPER
  #wrapper

    // USER INFO
    #userInfo
        h2 User Info
        p
            strong User Name:
            |  <span id='userInfoUserName'></span>
            br
            strong Full Name:
            |  <span id='userInfoFullName'></span>
            br
            strong E-Mail:
            |  <span id='userInfoEmail'></span>
            br
            strong Age:
            |  <span id='userInfoAge'></span>
            br
            strong Location:
            |  <span id='userInfoLocation'></span>
            br
            strong Gender:
            |  <span id='userInfoGender'></span>
    // /USER INFO

    //USER LIST
    h2 User List
    #userList
      table
        thead
          th UserName
          th Email
          th Delete / Update?
        tbody
    // /USER LIST

    // ADD USER
    #addUserPanel
      h2 Add user
      #addUser
        fieldset
          input#inputUserName(type='text', placeholder='User Name')
          input#inputUserEmail(type='text', placeholder='Email')
          br
          input#inputUserFullname(type='text', placeholder='Full Name')
          input#inputUserAge(type='text', placeholder='Age')
          br
          input#inputUserLocation(type='text', placeholder='Location')
          input#inputUserGender(type='text', placeholder='gender')
          br
          button#btnAddUser Add User
    // /ADD USER

    //User Update
    #updateUserPanel
      h2 Update User
      #updateUser
        fieldset
          input#updateUserName(type='text', placeholder='User Name')
          input#updateUserEmail(type='text', placeholder='Email')
          br
          input#updateUserFullname(type='text', placeholder='Full Name')
          input#updateUserAge(type='text', placeholder='Age')
          br
          input#updateUserLocation(type='text', placeholder='Location')
          input#updateUserGender(type='text', placeholder='gender')
          br
          button#btnUpdateUser Update User
          button#btnCancelUpdateUser Cancel
    // /User Update

  // /WRAPPER